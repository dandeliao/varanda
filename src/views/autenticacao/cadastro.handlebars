</div>

<form id="form-cadastro" action="/autenticacao/cadastro" method="post">
    <h3>Crie um perfil</h3>
    <label for="bicho_id" hidden>apelido</label>
    <input type="text" id="nome-cadastro" placeholder="apelido_na_varanda" name="bicho_id" required>
    <label for="email" hidden>e-mail</label>
    <input type="text" id="email-cadastro" placeholder="e-mail" name="email">
    <label for="senha" hidden>senha</label>
    <input type="password" id="senha-cadastro" placeholder="senha" name="senha" required>
    <label for="confirma_senha" hidden>confirme sua senha</label>
    <input type="password" id="senha2-cadastro" placeholder="confirme sua senha" name="confirma_senha" required>
    {{#if query.convite}}
    <input type="text" id="convite-cadastro" name="convite_id" value="{{query.convite}}" readonly hidden>
    {{/if}}
    {{#if flash.error}}
    <p style="color:darkred">Por favor, tente novamente. {{flash.error}}</p>
    {{/if}}
    <button type="submit">cadastrar</button>
</form>



<style>
	#hero {
