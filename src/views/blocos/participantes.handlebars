{{#if bloco.participantes}}
<div class="bloco participantes">
    <h2>Participantes</h2>
    <ul class="lista-bichos">
        {{#each bloco.participantes}}
        <li class="item-bicho">
            <a href="/{{this.bicho_id}}">
                <span class="avatar-quadrado" hx-get="/blocos/avatar?bicho={{this.bicho_id}}" hx-trigger="load"></span>
            </a>
            <p class="largura-fixa">
                <a class="mini-arroba" href="/{{this.bicho_id}}">@{{this.bicho_id}}</a>
            </p>
        </li>
        {{/each}}
    </ul>
</div>
{{/if}}

<style>
    .lista-bichos {
        display: flex;
        gap: 0.2rem;
        flex-wrap: wrap;
        padding: 0;
        margin: 0.9rem auto 0;
        list-style: none;
    }
    .item-bicho {
        margin-bottom: 0.8rem;
    }
    .largura-fixa {
        display: block;
        text-align: center;
        width: 86px;
        height: auto;
        margin: 0 auto;
        word-wrap: break-word;
    }

    .mini-arroba {
        font-size: 0.8rem;
    }
</style>