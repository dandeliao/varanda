<form action="/{{varanda.bicho_id}}{{#unless nova_pagina}}/{{pagina.pagina_id}}{{/unless}}" method="{{metodo}}">
	
	<label for="titulo" hidden>título da página "{{pagina.pagina_id}}"</label>
	<input type="text" id="titulo-pagina" value="{{pagina.titulo}}" name="titulo" required>
	<label for="html" hidden>html da página "{{pagina.pagina_id}}"</label>
	<textarea id="html-pagina" name="html" required>{{pagina.html}}</textarea>

	<button type="submit">salvar</button>
	<button hx-get="/{{varanda.bicho_id}}{{#unless nova_pagina}}/{{pagina.pagina_id}}{{/unless}}" hx-target="body" hx-push-url="true">cancelar</button>

</form>

<style>
	form {
        max-width: 360px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
        align-items: center;
        gap: 1rem;
	}
</style>